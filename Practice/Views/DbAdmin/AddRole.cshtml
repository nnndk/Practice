@model Роли
@{
    ViewData["Title"] = "AddRole";
}

<div class="row">
    <h1 class="mt-3 mb-3">Администратор баз данных</h1>
</div>

<form method="post" asp-action="AddRole">
    <div class="row">
        <div class="col-3"></div>
        <div class="border p-3 mt-4 col-6">
            <div class="row pb-2">
                <h2>Добавление роли</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Роль">Роль</label>
                <input asp-for="Роль" class="form-control" value=@Model.Роль />
                <span asp-validation-for="Роль" class="text-danger"></span>
            </div>

            <div class="text-end">
                <a asp-controller="DbAdmin" asp-action="Index" asp-route-tableName="Роли" class="btn btn-secondary mx-3" style="width:150px">
                    Назад
                </a>
                <button type="submit" class="btn btn-dark" style="width:150px">
                    Добавить
                </button>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</form>

