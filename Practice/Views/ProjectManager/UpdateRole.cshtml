@using Practice.Data
@model ПроектыИСотрудники
@{
    ViewData["Title"] = "UpdateRole";

    using (var db = new CourseProject2DBContext())
    {
        ViewBag.Roles = (from role in db.Ролиs select role).ToList();
    }
}

<div class="row">
    <h1 class="mt-3 mb-3">Менеджер проекта</h1>
</div>

<form method="post" asp-action="UpdateRole">
    <div class="row">
        <div class="col-3"></div>
        <div class="border p-3 mt-4 col-6">
            <div class="row pb-2">
                <h2 class="text_primary">Изменение роли</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Код">Код</label>
                <input asp-for="Код" class="form-control" value=@Model.Код readonly />
            </div>
            <div class="mb-3">
                <label asp-for="КодСотрудника">Код сотрудника</label>
                <input asp-for="КодСотрудника" class="form-control" value=@Model.КодСотрудника readonly />
            </div>
            <div class="mb-3">
                <label asp-for="КодПроекта">Код проекта</label>
                <input asp-for="КодПроекта" class="form-control" value=@Model.КодПроекта readonly />
            </div>
            <div class="mb-3">
                <label asp-for="ДатаНачалаРаботыНаПроекте">Дата начала работы на проекте</label>
                <input asp-for="ДатаНачалаРаботыНаПроекте" class="form-control" type="datetime" value=@Model.ДатаНачалаРаботыНаПроекте readonly />
            </div>
            <div class="mb-3">
                <label asp-for="ДатаОкончанияРаботыНаПроекте">Дата Окончания работы на проекте</label>
                <input asp-for="ДатаОкончанияРаботыНаПроекте" class="form-control" type="datetime" value=@Model.ДатаОкончанияРаботыНаПроекте readonly />
            </div>

            <div class="mb-3">
                <label asp-for="КодРоли">Роль</label>
                <select class="form-control" asp-for="КодРоли">
                    <option selected>Выбрать роль...</option>

                    @foreach (var role in ViewBag.Roles)
                    {
                        <option value=@role.Код>@role.Роль</option>
                    }
                </select>
                <span asp-validation-for="КодРоли" class="text_danger"></span>
            </div>

            <div class="text-end">
                <a asp-controller="ProjectManager" asp-action="UpdateDeveloper" asp-route-id=@Model.КодСотрудника asp-route-projectid=@Model.КодПроекта class="btn btn-secondary mx-3" style="width:150px">
                    Назад
                </a>
                <button type="submit" class="btn btn-dark" style="width:150px">
                    Отправить
                </button>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</form>

